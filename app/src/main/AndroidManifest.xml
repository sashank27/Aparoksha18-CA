<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.aparoksha.app19.ca">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="org.aparoksha.app19.ca.AparokshaCA"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.aparoksha.app19.ca.activities.MainActivity" />
        <activity android:name="org.aparoksha.app19.ca.activities.ScratchCardsActivity" />
        <activity android:name="org.aparoksha.app19.ca.activities.EnterDetailsActivity" />
        <activity android:name="org.aparoksha.app19.ca.activities.UploadsActivity" />
        <activity android:name="org.aparoksha.app19.ca.activities.UnverifiedActivity" />
        <activity
            android:name="org.aparoksha.app19.ca.activities.WelcomeActivity"
            android:label="@string/define_appintro"
            android:theme="@style/AppIntroTheme" />
        <activity
            android:name="org.aparoksha.app19.ca.activities.SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name="org.aparoksha.app19.ca.utils.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="org.aparoksha.app19.ca.activities.DevelopersActivity" />
        <activity android:name="org.aparoksha.app19.ca.activities.OffersActivity" />
        <activity android:name="org.aparoksha.app19.ca.activities.FeedsActivity" />
        <activity android:name="org.aparoksha.app19.ca.activities.ContactsActivity"></activity>
    </application>

</manifest>